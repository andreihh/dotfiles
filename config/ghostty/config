# config: configures Ghostty.
#
# Run `ghostty +show-config --default --docs` to list all available options.

# Import installed theme, if any.
config-file = theme

# JetBrains Mono Nerd Font is built into Ghostty as the default font.
font-family =
font-size = 12

# Disable font ligatures.
font-feature = -calt
font-feature = -liga
font-feature = -dlig

# Force blinking block cursor.
cursor-style = block
cursor-style-blink = true
shell-integration-features = no-cursor

# Hide mouse cursor while typing.
mouse-hide-while-typing = true

# Remove padding.
window-padding-x = 0
window-padding-y = 0

# Disable superfluous window decorations.
window-decoration = false

# Don't display window size after resizing.
resize-overlay = never

# Start maximized by default.
window-width = 9999
window-height = 9999

# Close terminal without confirmation when last window is closed.
quit-after-last-window-closed = true
confirm-close-surface = false

# Common shortcuts:
# - Paste with C-S-v
# - Emit A-{1-9} when pressing C-{1-9}
# - Emit A-{hjkl=} when pressing C-S-{hjkl=}
# - Open URI with C-click outside of `tmux`
keybind = ctrl+shift+v=paste_from_clipboard
keybind = ctrl+1=esc:1
keybind = ctrl+2=esc:2
keybind = ctrl+3=esc:3
keybind = ctrl+4=esc:4
keybind = ctrl+5=esc:5
keybind = ctrl+6=esc:6
keybind = ctrl+7=esc:7
keybind = ctrl+8=esc:8
keybind = ctrl+9=esc:9
keybind = ctrl+shift+h=esc:h
keybind = ctrl+shift+j=esc:j
keybind = ctrl+shift+k=esc:k
keybind = ctrl+shift+l=esc:l
keybind = ctrl+shift+l=esc:l
keybind = ctrl+shift+equal=esc:equal
keybind = cmd+shift+v=paste_from_clipboard
keybind = cmd+1=esc:1
keybind = cmd+2=esc:2
keybind = cmd+3=esc:3
keybind = cmd+4=esc:4
keybind = cmd+5=esc:5
keybind = cmd+6=esc:6
keybind = cmd+7=esc:7
keybind = cmd+8=esc:8
keybind = cmd+9=esc:9
keybind = cmd+shift+h=esc:h
keybind = cmd+shift+j=esc:j
keybind = cmd+shift+k=esc:k
keybind = cmd+shift+l=esc:l
keybind = cmd+shift+equal=esc:equal

# Required for key bindings in terminal apps on MacOS.
#
# Don't bind `cmd+q` because it's already used to exit.
macos-option-as-alt = true
keybind = cmd+@=text:\x00
keybind = cmd+a=text:\x01
keybind = cmd+b=text:\x02
keybind = cmd+c=text:\x03
keybind = cmd+d=text:\x04
keybind = cmd+e=text:\x05
keybind = cmd+f=text:\x06
keybind = cmd+g=text:\x07
keybind = cmd+h=text:\x08
keybind = cmd+i=text:\x09
keybind = cmd+j=text:\x0a
keybind = cmd+k=text:\x0b
keybind = cmd+l=text:\x0c
keybind = cmd+m=text:\x0d
keybind = cmd+n=text:\x0e
keybind = cmd+o=text:\x0f
keybind = cmd+p=text:\x10
keybind = cmd+r=text:\x12
keybind = cmd+s=text:\x13
keybind = cmd+t=text:\x14
keybind = cmd+u=text:\x15
keybind = cmd+v=text:\x16
keybind = cmd+w=text:\x17
keybind = cmd+x=text:\x18
keybind = cmd+y=text:\x19
keybind = cmd+z=text:\x1a
keybind = cmd+[=text:\x1b
keybind = cmd+\=text:\x1c
keybind = cmd+]=text:\x1d
keybind = cmd+^=text:\x1e
keybind = cmd+_=text:\x1f
keybind = cmd+space=text:\x20
