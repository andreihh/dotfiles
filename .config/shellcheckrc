# Follow constant external sources.
external-sources=true

# Don't follow dynamic external sources.
disable=SC1090

# Require [[ and warn about [ in Bash.
enable=require-double-brackets

# Suggest `${VAR}` in place of `$VAR`.
enable=require-variable-braces

# Suggest explicitly using `-n` in `[ $var ]`.
enable=avoid-nullary-conditions

# Suggest adding a default case in `case` statements.
enable=add-default-case

# Suggest `command -v` instead of `which`.
enable=deprecate-which
