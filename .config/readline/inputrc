# inputrc: configures `readline`.

# Make Esc more responsive.
set keyseq-timeout 5

# Enhanced autocomplete.
set visible-stats on
set colored-stats on
set mark-symlinked-directories on
set completion-ignore-case on
set completion-map-case on
set skip-completed-text on
set show-all-if-ambiguous on

# Allow UTF-8 input and output.
set input-meta on
set output-meta on
set convert-meta off

# Enable paste protection.
set enable-bracketed-paste on

# Use vi editing mode.
set editing-mode vi

# Highlight current vi editing mode.
set show-mode-in-prompt on
set vi-ins-mode-string "\1\e[1;32m\2+\1\e[0m\2"
set vi-cmd-mode-string "\1\e[1;32m\2:\1\e[0m\2"

# Set command mode key bindings.
set keymap vi-command

# Set insert mode key bindings.
set keymap vi-insert

# Set search command history key bindings.
"\C-f": history-search-forward
"\C-b": history-search-backward
