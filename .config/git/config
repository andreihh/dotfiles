[core]
	excludesFile = ~/.ignore

[init]
	defaultBranch = main

[blame]
	date = short

[color]
	ui = auto

[diff]
	tool = nvimdiff

[difftool]
	prompt = false

[credential "https://codeberg.org"]
	helper = store

[credential "https://github.com"]
	helper = store

[credential "https://gitlab.com"]
	helper = store

[alias]
	s = status
	xl = log --graph --all --decorate --oneline
	ar = add -A
	c = commit
	ci = git add --interactive && git commit
	a = git commit --amend
	ai = git add --interactive && git commit --amend
	d = difftool
