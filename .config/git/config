[init]
	defaultBranch = main

[blame]
	date = short

[color]
	ui = auto

[diff]
	tool = nvimdiff

[difftool]
	prompt = false

[credential "https://codeberg.org"]
	helper = store

[credential "https://github.com"]
	helper = store

[credential "https://gitlab.com"]
	helper = store

[alias]
	s = status
	xl = log --graph --all --decorate --oneline
	go = checkout
	c = commit
	ci = !git add --interactive && git commit
	ca = !git add -A && git commit
	a = commit --amend
	ai = !git add --interactive && git commit --amend
	aa = !git add -A && git commit --amend
	d = difftool
	p = push
	f = fetch
	fr = pull --rebase
	fm = pull --merge
	frp = !git pull --rebase && git push
	fmp = !git pull --merge && git push
